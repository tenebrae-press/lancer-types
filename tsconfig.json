{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable"
      ],
      "declaration": true,
      "emitDeclarationOnly": true
    },
    "include": [
      "index.ts", "src/**/*.ts"
    ],
    "exclude": [
      "node_modules", "deps"
    ],
  }